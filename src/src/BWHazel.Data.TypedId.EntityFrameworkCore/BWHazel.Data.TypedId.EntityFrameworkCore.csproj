    <Product>Typed ID for Entity Framework Core</Product>
    <Version>1.0.0</Version>
    <PackageId>BWHazel.TypedId.EntityFrameworkCore</PackageId>
    <RepositoryUrl>https://github.com/BHazel/typed-id</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright Â© Benedict W. Hazel, 2023</Copyright>
    <RootNamespace>BWHazel.Data</RootNamespace>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.10" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BWHazel.Data.TypedId\BWHazel.Data.TypedId.csproj" />
